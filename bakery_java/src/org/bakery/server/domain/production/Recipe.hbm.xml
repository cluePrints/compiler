<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.bakery.server.domain.production.Recipe"
		table="recips">
		<id name="id"
			column="recip_id">
			<generator class="increment"/>
		</id>
		<property name="active"
			  type="integer"
			  column="recip_active"/>
		<property
			name="name"
			column="recip_name"/>
		<property
			name="formula"
			column="recip_formula"/>		
		<property
			name="time"
			column="recip_time"/>
		<set name="effects"
			inverse="true"
			cascade="save-update">
			<key column="recip_effect_recip"/>
			<one-to-many class="org.bakery.server.domain.production.RecipeEffect"/> 
		</set>
		<set name="parameters"
			fetch="join"
			cascade="save-update"
			outer-join="true"
			table="recip_parameters">
				<key column="recip_id"/>
            	<many-to-many column="device_parameter_id"
            		fetch="join"
            		outer-join="true"
                	class="org.bakery.server.domain.hardware.DeviceParameter"/>			
		</set>
	</class>
</hibernate-mapping>