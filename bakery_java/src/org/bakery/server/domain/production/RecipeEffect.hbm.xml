<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.bakery.server.domain.production.RecipeEffect"
		table="recip_effects">
		<id name="id"
			column="recip_effect_id">
			<generator class="increment"/>
		</id>
		<many-to-one
			outer-join="true"
			name="productType"
			column="recip_effect_product_type"/>
		<set name="formulaParts"
			 inverse="true"
			 cascade="all"
			 outer-join="true">
			<key column="recip_effect_id"/>
			<one-to-many class="org.bakery.server.domain.production.RecipeEffectPart"/>
		</set>
		<many-to-one
			outer-join="true"
			name="recipe"
			column="recip_effect_recip"/>
		<property
			name="consumed"
			column="recip_effect_is_consumed"/>			
	</class>
</hibernate-mapping>