<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.bakery.server.domain.production.ProductType"
		table="product_types">
		<id name="id"
			column="product_type_id">
			<generator class="increment"/>
		</id>
		<property name="active"
			  type="integer"
			  column="product_type_active"/>
		<property
			name="name"
			column="product_type_name"/>
		<many-to-one
			outer-join="true"
			name="unit"
			column="product_type_unit"
			/>
	</class>
</hibernate-mapping>