<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.bakery.server.domain.hardware.DeviceParameter"
		table="device_parameters">
		<id name="id"
			column="device_parameter_id">
			<generator class="increment"/>
		</id>
		<property name="active"
			  type="integer"
			  column="device_parameter_active"/>
		<property name="changable"
			  type="integer"
			  column="device_parameter_changable"/>
		<property name="minimize"
			  type="integer"
			  column="device_parameter_minimize"/>
		<property
			name="name"
			column="device_parameter_name"/>
		<property
			name="bestValue"
			column="device_parameter_best_value"/>
		<many-to-one
			name="unit"
			column="device_parameter_unit"/>		
		<many-to-one
			name="device"
			column="device_id"
			fetch="join"/>
		<set name="recipes"
			table="recip_parameters"
			cascade="all">
				<key column="device_parameter_id"/>
            	<many-to-many column="recipe_id"
            		fetch="join"
            		outer-join="false"
                	class="org.bakery.server.domain.production.Recipe"/>			
		</set>
	</class>
</hibernate-mapping>