<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.bakery.server.domain.hardware.Device"
		table="devices">
		<id name="id"
			column="device_id">
			<generator class="increment"/>
		</id>
		<property name="active"
			  type="integer"
			  column="device_active"/>
		<property
			name="name"
			column="device_name"/>
		<property
			name="description"
			column="device_desc"/>
		<set
		    name="parameters"			
			inverse="true"
			cascade="save-update"
			outer-join="true">
			<key column="device_parameter_id"/>
			<one-to-many
				class="org.bakery.server.domain.hardware.DeviceParameter"/>
		</set>
	</class>
</hibernate-mapping>