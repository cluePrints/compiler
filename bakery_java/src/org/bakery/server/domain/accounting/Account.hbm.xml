<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.bakery.server.domain.accounting.Account"
		table="accounts">
		<id name="id"
			column="account_id">
			<generator class="increment"/>
		</id>
		<property name="active"
			  type="integer"
			  column="account_active"/>		
		<property
			name="name"
			column="account_name"/>
			
		<many-to-one
			name="owner"
			column="account_contragent"
			access="field"/>
						
		<property
			name="desc"
			column="account_desc"/>
	</class>
</hibernate-mapping>