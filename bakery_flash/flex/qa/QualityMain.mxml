<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:admin="admin.*"
	xmlns:dev="qa.simpledevicereport.*" 
	xmlns:qa="qa.*"
	width="100%" 
	height="100%"
	backgroundColor="#8496a5">
	<mx:Script>
		<![CDATA[
			import components.SvcUrl;
			import mx.managers.PopUpManager;
			import mx.controls.PopUpButton;
			var svcUrl:SvcUrl = new SvcUrl();
			private function hide():void{
				PopUpManager.removePopUp(this);
			}
		]]>
	</mx:Script>
	<mx:VBox
		 width="100%" height="100%"
		 verticalAlign="middle"
		horizontalAlign="center">			
		<mx:HBox
			width="100%"
			horizontalAlign="right">
			<qa:TopMenu
				width="100%"/>			
			<mx:Button click="hide()" label="X"/>								
		</mx:HBox>
		<mx:VBox>
			<mx:Box 
				width="90%"
				height="90%"
				horizontalAlign="center"
				verticalAlign="top">			
				<mx:Text htmlText="Рабочее место менеджера по качеству"/>
				<mx:VBox
					width="1024"
					height="768"				
					verticalAlign="middle"
					horizontalAlign="left">					
					<mx:HBox 
						width="100%"
						height="100%">
						<mx:VBox
							width="75%"
							height="100%">		
						</mx:VBox>
						<mx:Grid
							width="25%"
							height="100%">
							<mx:GridRow
								width="100%"
								height="100%">																									
								<mx:GridItem
									width="100%"
									height="100%">									
									<mx:VBox
										width="100%"
										height="100%">
										<mx:Label text="Быстрые отчеты о состоянии"/>
										<mx:TabNavigator
											width="100%"
											height="100%">
											<mx:Canvas label="Работоспособность оборудования"
												 width="100%"
												 height="100%">
												<dev:DeviceStateChart
													width="100%"
													height="100%"
													id="devChart"/>
												<!--mx:Legend dataProvider="{devChart}"/-->
											</mx:Canvas>
											<mx:Canvas label="Незавершенные циклы"
												width="100%"
												height="100%">
												<dev:CurrentProductionStateChart
													width="100%"
													height="100%"
													id="prodChart"/>
											</mx:Canvas>
											<mx:Canvas label="Сбои апаратуры" width="100%" height="100%">
											</mx:Canvas>
										</mx:TabNavigator>
									</mx:VBox>
								</mx:GridItem>
							</mx:GridRow>
							<mx:GridRow width="100%" height="100%">
								<mx:GridItem width="100%" height="100%">
									<mx:VBox
										width="100%"
										height="100%">
										<mx:Label text="События системы, требующие реакции"/>
										<mx:TabNavigator
											width="100%"
											height="100%">
											<mx:Canvas 
												 label="Потребности в продукции"
												 width="100%"
												 height="100%">			
											</mx:Canvas>
											<mx:Canvas
												label="Сбои апаратуры"
												width="100%"
												height="100%">
												<mx:Button label="Изучить подробнее"/>
											</mx:Canvas>
										</mx:TabNavigator>
									</mx:VBox>
								</mx:GridItem>
							</mx:GridRow>
							<mx:GridRow width="100%" height="100%">
								<mx:GridItem width="100%" height="100%">
									<mx:VBox
										width="100%"
										height="100%">
										<mx:Label text="События системы, требующие реакции"/>
										<mx:TabNavigator
											width="100%"
											height="100%">
											<mx:Canvas 
												 label="Потребности в продукции"
												 width="100%"
												 height="100%">			
											</mx:Canvas>
											<mx:Canvas
												label="Сбои апаратуры"
												width="100%"
												height="100%">
												<mx:Button label="Изучить подробнее"/>
											</mx:Canvas>
										</mx:TabNavigator>
									</mx:VBox>
								</mx:GridItem>
							</mx:GridRow>
						</mx:Grid>
					</mx:HBox>
					
				</mx:VBox>
			</mx:Box>	
		</mx:VBox>
	</mx:VBox>
</mx:Canvas>
