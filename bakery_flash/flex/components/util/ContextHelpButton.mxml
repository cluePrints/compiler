<?xml version="1.0" encoding="utf-8"?>
<mx:Button xmlns:mx="http://www.adobe.com/2006/mxml"
	icon="@Embed(source='img/lamp.png')"
	toolTip="Подсказка"
	click="showHelpScreen()"
	width="15"
	height="21">
	<mx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			import mx.controls.PopUpButton;
			import mx.controls.Text;
			import mx.controls.Label;
			import mx.core.UIComponent;
			[Bindable]
			public var helpText:String=null;
			
			public var helpScreen:UIComponent=null;			
			
			private function showHelpScreen():void{
				var screen:ClosablePopup = new ClosablePopup();
				screen.initialize();
				if (helpScreen != null) {					
					screen.placeholder.addChild(helpScreen);
				} else if (helpText != null) {
					var txt:Text = new Text();
					txt.htmlText = helpText;				
					screen.placeholder.addChild(txt);
				} else {
					screen.placeholder.addChild(this.getChildAt(0));
				}
				PopUpManager.addPopUp(screen, this, true);
			}			
		]]>
	</mx:Script>
</mx:Button>
