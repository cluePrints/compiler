<?xml version="1.0" encoding="utf-8"?>
<mx:VBox horizontalAlign="center"
	xmlns:mx="http://www.adobe.com/2006/mxml"
	creationComplete="init()" width="900" height="454">
		
	<mx:HTTPService id="productTypeSvc" 
		useProxy="false"
		method="POST"
		url="{productTypeDataSvcUrl}"
		result="httpproducttypeResultHandler(event)"
		fault="util.httpFaultHandler(event)"/>
	<mx:Script>
		<![CDATA[
			import mx.validators.RegExpValidator;
			import mx.utils.StringUtil;
			import mx.rpc.http.mxml.HTTPService;
			import flash.sampler.getInvocationCount;
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			
			public var unitDataSvcUrl:String;
			public var productTypeDataSvcUrl:String;
			
			[Bindable]
            private var productTypes:*;
            [Bindable]
            private var availableUnits:ArrayCollection;
			[Bindable]
            private var units:ArrayCollection;
			
			public function init():void{
				createNew();
				productTypeSvc.cancel();
				formModel.mode="FETCH";
				productTypeSvc.send(formModel);				
			}

			var util:Util = new Util();
			private function httpproducttypeResultHandler(event:*):void{
				productTypes = event.result.mainData;
				if (productTypes != null) {
					productTypes["producttype"].filterFunction = mainFilterFunction;
				}
				
				units = util.extractItemCollection(event.result.units, 'unit');
				availableUnits = util.getActiveItems(units);
				
			} 
			private function mainFilterFunction(item:*){
				var result:Boolean=true;
				if (!cbShowNonActive.selected && item.active<=0)
					return false;
				if (!cbShowActive.selected && item.active>0)
					return false;					
				if (mx.utils.StringUtil.trim(edFilter.text).length>0) {
					if (!new RegExp(edFilter.text).test(item.name))
						return false;
				}
				return result;
			} 
			function bindSelected():void{
				if (dgData.selectedIndex>=0){
					cbActive.selected = (dgData.selectedItem.active == 1);
					tiId.text=dgData.selectedItem.id;
					tiName.text=dgData.selectedItem.name;	
					cbUnits.selectedIndex=getProductTypeUnitPos(dgData.selectedItem.unit);			
				}													
			}
			function createNew():void{
				tiId.text="";
				cbActive.selected=true;
				formModel.mode="NEW";
				formModel.unit=0;				
				cbUnits.selectedIndex=-1;
				tiName.text="<undefined>";			
			}
			function cancel():void{
				bindSelected();
			}
			function saveSelected():void{
				formModel.mode="EDIT";
				productTypeSvc.cancel();			
				productTypeSvc.send(formModel);
			}
			function filterRefresh():void{
				productTypes["producttype"].refresh();
			}
			function activeToString(item:Object, column:DataGridColumn):String{				
				return (item.active>0 ? "active" : "not active"); 
			}
			function getProductTypeUnitPos(_unitId:int){
				var result=0;
				for each (var unit in availableUnits){ 
					if (unit.id == _unitId) {
						return result;
					}
					result++;
				} 		
				return -1;		
			}
			function getProductTypeUnit(_id:int){
				var result=null;
				for each (var unit in units){ 
					if (unit.id == _id) {
						result = unit;
					}
				} 
				return result;
			}
			function getProductTypeUnitName(item:Object, column:DataGridColumn):String{
				var tmp = getProductTypeUnit(item.unit);
				if (tmp == null) {
					return "";
				} else {
					return tmp.name;
				}					
			}
		]]>
	</mx:Script>			
	<mx:Model id="formModel">		
		<root>
			<mode>{tiId.text as int>0 ? tiMode.text : &quot;NEW&quot;}</mode>
			<unit>{cbUnits.selectedItem.id}</unit>
			<id>{tiId.text}</id>		
			<active>{cbActive.selected == true ? "1" : "0"}</active>
			<name>{encodeURI(tiName.text)}</name>
		</root>		
	</mx:Model>		
		<mx:Label text="Панель управления типами продуктов" fontWeight="bold" fontSize="14"/>
		<mx:HBox x="0" y="0" width="891" height="412">
			<mx:VBox height="100%" width="70%" horizontalAlign="center" >
				<mx:DataGrid height="388" width="592" 
					id="dgData" 
					dataProvider="{productTypes['producttype']}"
					itemClick="bindSelected()">
					<mx:columns>
						<mx:DataGridColumn headerText="Ид.Номер" dataField="id" width="80"/>
						<mx:DataGridColumn headerText="Название" dataField="name" width="150"/>
						<mx:DataGridColumn headerText="ед.измерения" labelFunction="getProductTypeUnitName" width="150"/>
						<mx:DataGridColumn dataField="Активный" labelFunction="activeToString" width="80"/>
					</mx:columns>
				</mx:DataGrid>
			</mx:VBox>
			<mx:VBox height="50%" horizontalAlign="center" verticalAlign="center">				
				<mx:VBox horizontalAlign="left" height="147">	
					<mx:TextInput id="tiMode" visible="false" text="EDIT"/>
					<mx:TextInput id="tiId" visible="false" text=""/>
					<mx:FormItem label="Название:" 
						required="true">												
						<mx:TextInput id="tiName"/>
					</mx:FormItem>
					<mx:FormItem label="ед. измерения:" 
						required="true">												
						<mx:ComboBox id="cbUnits"
							dataProvider="{availableUnits}"
							labelField="name" width="120"/>							
					</mx:FormItem>
					<mx:FormItem label="Активная">
						<mx:CheckBox id="cbActive"/>
					</mx:FormItem>
				</mx:VBox>
				<mx:HBox horizontalAlign="center">
					<mx:Button label="Сохранить" click="saveSelected()"/>							
					<mx:Button label="Отмена" click="cancel()"/>
				</mx:HBox>
				<mx:HBox horizontalAlign="center">
					<mx:Button label="Создать" click="createNew()"/>							
				</mx:HBox>
				<mx:VBox id="filterPanel">
					<mx:Script>
						<![CDATA[
							[Bindable]
							public var filterPanelMinimized:Boolean=true;							
						]]>
					</mx:Script>
					<mx:HBox horizontalAlign="right" width="100%" height="26">
						<mx:FormItem label="Фильтр">
							<mx:Button id="filterButton" label="{filterPanelMinimized ? &quot;-&quot; : &quot;+&quot;}" click="filterPanelMinimized = !filterPanelMinimized" width="126"/>
						</mx:FormItem>												
					</mx:HBox>					
					<mx:VBox id="filterDetails" visible="{filterPanelMinimized ? false : true}">												
						<mx:FormItem label="Показывать" horizontalAlign="left" width="277">
							<mx:CheckBox id="cbShowActive" click="filterRefresh()" selected="true" label="Активный"/>
							<mx:CheckBox id="cbShowNonActive" click="filterRefresh()" selected="true" label="Неактивный"/>
						</mx:FormItem>
						<mx:FormItem label="Шаблон названия:" >
							<mx:TextInput id="edFilter" text=".*" change="filterRefresh()" width="157"/>									
						</mx:FormItem>	
					</mx:VBox>					
				</mx:VBox>
			</mx:VBox>
		</mx:HBox>
	</mx:VBox>